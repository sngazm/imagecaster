---
import Layout from "../../layouts/Layout.astro";
import { getPublishedEpisodes, getEpisode, formatDuration, formatDate, formatFileSize, processDescription, getPodcastIndex, getTranscriptText } from "../../lib/api";
import { getEpisodeOgImageUrl } from "../../lib/og";
import type { Episode } from "../../lib/types";

// 前後エピソードのナビゲーション用
interface EpisodeNav {
  id: string;
  title: string;
}

// SSGモード用: ビルド時にパスを生成
export async function getStaticPaths() {
  const [episodes, index] = await Promise.all([
    getPublishedEpisodes(),
    getPodcastIndex(),
  ]);
  const websiteUrl = index.podcast.websiteUrl;
  const podcastArtworkUrl = index.podcast.artworkUrl;
  const spotifyUrl = index.podcast.spotifyUrl || null;

  return Promise.all(
    episodes.map(async (episode, idx) => {
      const transcriptText = episode.transcriptUrl
        ? await getTranscriptText(episode.transcriptUrl)
        : "";
      // エピソードは新しい順なので: index小=新しい, index大=古い
      // 前のエピソード = より古い（index + 1）
      // 次のエピソード = より新しい（index - 1）
      const prevEpisode = idx < episodes.length - 1
        ? { id: episodes[idx + 1].id, title: episodes[idx + 1].title }
        : null;
      const nextEpisode = idx > 0
        ? { id: episodes[idx - 1].id, title: episodes[idx - 1].title }
        : null;
      return {
        params: { id: episode.id },
        props: { episode, websiteUrl, transcriptText, podcastArtworkUrl, prevEpisode, nextEpisode, spotifyUrl },
      };
    })
  );
}

// SSRモード（開発時）はpropsが空なので、paramsから取得
const { id } = Astro.params;
let episode: Episode;
let websiteUrl: string;
let transcriptText: string;
let podcastArtworkUrl: string;
let prevEpisode: EpisodeNav | null = null;
let nextEpisode: EpisodeNav | null = null;
let spotifyUrl: string | null = null;

if (Astro.props.episode) {
  // SSGモード: getStaticPathsからpropsが渡される
  episode = Astro.props.episode;
  websiteUrl = Astro.props.websiteUrl;
  transcriptText = Astro.props.transcriptText || "";
  podcastArtworkUrl = Astro.props.podcastArtworkUrl || "";
  prevEpisode = Astro.props.prevEpisode || null;
  nextEpisode = Astro.props.nextEpisode || null;
  spotifyUrl = Astro.props.spotifyUrl || null;
} else {
  // SSRモード: paramsから取得してfetch
  const [fetchedEpisode, allEpisodes, index] = await Promise.all([
    getEpisode(id!),
    getPublishedEpisodes(),
    getPodcastIndex(),
  ]);
  episode = fetchedEpisode;
  websiteUrl = index.podcast.websiteUrl;
  podcastArtworkUrl = index.podcast.artworkUrl;
  spotifyUrl = index.podcast.spotifyUrl || null;
  transcriptText = episode.transcriptUrl
    ? await getTranscriptText(episode.transcriptUrl)
    : "";
  // 前後のエピソードを探す
  const currentIdx = allEpisodes.findIndex(e => e.id === id);
  if (currentIdx !== -1) {
    if (currentIdx < allEpisodes.length - 1) {
      prevEpisode = { id: allEpisodes[currentIdx + 1].id, title: allEpisodes[currentIdx + 1].title };
    }
    if (currentIdx > 0) {
      nextEpisode = { id: allEpisodes[currentIdx - 1].id, title: allEpisodes[currentIdx - 1].title };
    }
  }
}

const description = processDescription(episode.description, episode, websiteUrl);

// OGP画像（エピソードのアートワークURL、またはPodcastアートワークを使用）
const ogImageUrl = getEpisodeOgImageUrl(episode.artworkUrl, podcastArtworkUrl);
---

<Layout title={episode.title} description={description} ogImage={ogImageUrl} ogType="article">
  <article class="mx-auto max-w-4xl px-4 py-8 sm:py-10" data-pagefind-body>
    <!-- ヘッダー -->
    <header class="mb-6">
      <div class="mb-3">
        <a
          href="/"
          class="inline-flex items-center gap-1 text-xs font-medium text-text-muted transition-colors hover:text-text dark:text-text-muted-dark dark:hover:text-text-dark"
        >
          <svg class="h-3.5 w-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
          </svg>
          エピソード一覧
        </a>
      </div>

      <div class="mb-5 flex flex-col gap-4 items-center sm:flex-row sm:items-start">
        {(episode.artworkUrl || podcastArtworkUrl) && (
          <a class="shrink-0" href="/">
            <img
              src={episode.artworkUrl || podcastArtworkUrl}
              alt={episode.title}
              class="h-28 w-28 shrink-0 rounded-lg shadow-md sm:h-32 sm:w-32"
            />
          </a>
        )}
        <div class="text-center sm:text-left">
          <time class="text-xs font-medium text-text-muted dark:text-text-muted-dark" datetime={episode.publishedAt || episode.publishAt}>
            {formatDate(episode.publishedAt || episode.publishAt)}
          </time>
          <h1 class="mt-1.5 text-lg font-semibold leading-snug text-text dark:text-text-dark sm:text-xl md:text-2xl">
            {episode.title}
          </h1>
        </div>
      </div>
    </header>

    <!-- オーディオプレイヤー -->
    {/* audioUrlがあればそれを使い、なければsourceAudioUrl（RSSインポート時の外部URL）を使用 */}
    <div class="mb-6 rounded-lg border border-border bg-bg-elevated p-4 dark:border-border-dark dark:bg-bg-elevated-dark">
      <audio controls class="mb-3 w-full" preload="metadata">
        <source src={episode.audioUrl || episode.sourceAudioUrl || ""} type="audio/mpeg" />
        お使いのブラウザはオーディオ再生に対応していません。
      </audio>

      <div class="flex flex-wrap items-center gap-x-4 gap-y-2 text-xs text-text-muted dark:text-text-muted-dark">
        <span class="flex items-center gap-1">
          <svg class="h-3.5 w-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
          {formatDuration(episode.duration)}
        </span>
        <span class="flex items-center gap-1">
          <svg class="h-3.5 w-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 21h10a2 2 0 002-2V9.414a1 1 0 00-.293-.707l-5.414-5.414A1 1 0 0012.586 3H7a2 2 0 00-2 2v14a2 2 0 002 2z" />
          </svg>
          {formatFileSize(episode.fileSize)}
        </span>
        <a
          href={episode.audioUrl || episode.sourceAudioUrl || ""}
          download
          class="flex items-center gap-1 text-accent hover:text-accent-hover"
        >
          <svg class="h-3.5 w-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4" />
          </svg>
          ダウンロード
        </a>
        {episode.applePodcastsUrl && (
          <a
            href={episode.applePodcastsUrl}
            target="_blank"
            rel="noopener noreferrer"
            class="flex items-center gap-1 rounded-md bg-apple px-2 py-1 text-white transition-opacity hover:opacity-90"
          >
            <svg class="h-3.5 w-3.5" viewBox="0 0 24 24" fill="currentColor">
              <path d="M5.34 0A5.328 5.328 0 000 5.34v13.32A5.328 5.328 0 005.34 24h13.32A5.328 5.328 0 0024 18.66V5.34A5.328 5.328 0 0018.66 0zm6.525 2.568c2.336 0 4.448.902 6.056 2.587 1.224 1.272 1.912 2.619 2.264 4.392.12.59.12 2.2.007 2.864a8.506 8.506 0 01-3.24 5.296c-.608.46-2.096 1.261-2.336 1.261-.088 0-.096-.091-.056-.46.072-.592.144-.715.48-.856.536-.224 1.448-.874 2.008-1.435a7.644 7.644 0 002.008-3.536c.208-.824.184-2.656-.048-3.504-.728-2.696-2.928-4.792-5.624-5.352-.784-.16-2.208-.16-3 0-2.728.56-4.984 2.76-5.672 5.528-.184.752-.184 2.584 0 3.336.456 1.832 1.64 3.512 3.192 4.512.304.2.672.408.824.472.336.144.408.264.472.856.04.36.03.464-.056.464-.056 0-.464-.176-.896-.384l-.04-.03c-2.472-1.216-4.056-3.274-4.632-6.012-.144-.706-.168-2.392-.03-3.04.36-1.74 1.048-3.1 2.192-4.304 1.648-1.737 3.768-2.656 6.128-2.656zm.134 2.81c.409.004.803.04 1.106.106 2.784.62 4.76 3.408 4.376 6.174-.152 1.114-.536 2.03-1.216 2.88-.336.43-1.152 1.15-1.296 1.15-.023 0-.048-.272-.048-.603v-.605l.416-.496c1.568-1.878 1.456-4.502-.256-6.224-.664-.67-1.432-1.064-2.424-1.246-.64-.118-.776-.118-1.448-.008-1.02.167-1.81.562-2.512 1.256-1.72 1.704-1.832 4.342-.264 6.222l.413.496v.608c0 .336-.027.608-.06.608-.03 0-.264-.16-.512-.36l-.034-.011c-.832-.664-1.568-1.842-1.872-2.997-.184-.698-.184-2.024.008-2.72.504-1.878 1.888-3.335 3.808-4.019.41-.145 1.133-.22 1.814-.211zm-.13 2.99c.31 0 .62.06.844.178.488.253.888.745 1.04 1.259.464 1.578-1.208 2.96-2.72 2.254h-.015c-.712-.331-1.096-.956-1.104-1.77 0-.733.408-1.371 1.112-1.745.224-.117.534-.176.844-.176zm-.011 4.728c.988-.004 1.706.349 1.97.97.198.464.124 1.932-.218 4.302-.232 1.656-.36 2.074-.68 2.356-.44.39-1.064.498-1.656.288h-.003c-.716-.257-.87-.605-1.164-2.644-.341-2.37-.416-3.838-.218-4.302.262-.616.974-.966 1.97-.97z"/>
            </svg>
            Apple
          </a>
        )}
        {spotifyUrl && (
          <a
            href={spotifyUrl}
            target="_blank"
            rel="noopener noreferrer"
            class="flex items-center gap-1 rounded-md bg-spotify px-2 py-1 text-white transition-opacity hover:opacity-90"
          >
            <svg class="h-3.5 w-3.5" viewBox="0 0 24 24" fill="currentColor">
              <path d="M12 0C5.4 0 0 5.4 0 12s5.4 12 12 12 12-5.4 12-12S18.66 0 12 0zm5.521 17.34c-.24.359-.66.48-1.021.24-2.82-1.74-6.36-2.101-10.561-1.141-.418.122-.779-.179-.899-.539-.12-.421.18-.78.54-.9 4.56-1.021 8.52-.6 11.64 1.32.42.18.479.659.301 1.02zm1.44-3.3c-.301.42-.841.6-1.262.3-3.239-1.98-8.159-2.58-11.939-1.38-.479.12-1.02-.12-1.14-.6-.12-.48.12-1.021.6-1.141C9.6 9.9 15 10.561 18.72 12.84c.361.181.54.78.241 1.2zm.12-3.36C15.24 8.4 8.82 8.16 5.16 9.301c-.6.179-1.2-.181-1.38-.721-.18-.601.18-1.2.72-1.381 4.26-1.26 11.28-1.02 15.721 1.621.539.3.719 1.02.419 1.56-.299.421-1.02.599-1.559.3z"/>
            </svg>
            Spotify
          </a>
        )}
      </div>
    </div>

    <!-- 説明 -->
    <div class="rounded-lg border border-border bg-bg-elevated p-4 dark:border-border-dark dark:bg-bg-elevated-dark">
      <h2 class="mb-3 text-sm font-semibold text-text dark:text-text-dark">
        エピソード概要
      </h2>
      <div class="prose prose-sm prose-zinc dark:prose-invert max-w-none text-text-secondary dark:text-text-secondary-dark" set:html={description} />

      {transcriptText && (
        <details class="mt-4 border-t border-border pt-4 dark:border-border-dark group">
          <summary class="cursor-pointer list-none inline-flex items-center gap-1.5 text-xs font-medium text-accent hover:text-accent-hover select-none">
            <svg class="h-4 w-4 transition-transform group-open:rotate-90" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
            </svg>
            文字起こしを見る
          </summary>
          <div class="mt-3 text-sm leading-relaxed text-text-secondary dark:text-text-secondary-dark whitespace-pre-wrap">
            {transcriptText}
          </div>
        </details>
      )}
    </div>

    <!-- シェア・外部リンク -->
    <div class="mt-6 flex flex-wrap items-center gap-3">
      <span class="text-xs font-medium text-text-muted dark:text-text-muted-dark">シェア:</span>
      <a
        href={`https://twitter.com/intent/tweet?url=${encodeURIComponent(Astro.url.href)}&text=${encodeURIComponent(episode.title)}`}
        target="_blank"
        rel="noopener noreferrer"
        class="rounded-md bg-bg-subtle p-1.5 text-text-muted transition-colors hover:bg-border hover:text-text dark:bg-bg-subtle-dark dark:text-text-muted-dark dark:hover:bg-border-dark dark:hover:text-text-dark"
        aria-label="X (Twitter) でシェア"
      >
        <svg class="h-4 w-4" fill="currentColor" viewBox="0 0 24 24">
          <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>
        </svg>
      </a>
      <button
        type="button"
        onclick={`navigator.clipboard.writeText('${Astro.url.href}'); alert('URLをコピーしました')`}
        class="rounded-md bg-bg-subtle p-1.5 text-text-muted transition-colors hover:bg-border hover:text-text dark:bg-bg-subtle-dark dark:text-text-muted-dark dark:hover:bg-border-dark dark:hover:text-text-dark"
        aria-label="URLをコピー"
      >
        <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 5H6a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2v-1M8 5a2 2 0 002 2h2a2 2 0 002-2M8 5a2 2 0 012-2h2a2 2 0 012 2m0 0h2a2 2 0 012 2v3m2 4H10m0 0l3-3m-3 3l3 3" />
        </svg>
      </button>
    </div>

    <!-- 前後のエピソードナビゲーション -->
    {(prevEpisode || nextEpisode) && (
      <nav class="mt-8 border-t border-border pt-6 dark:border-border-dark">
        <div class="grid gap-3 sm:grid-cols-2">
          {prevEpisode ? (
            <a
              href={`/episodes/${prevEpisode.id}`}
              class="group flex flex-col rounded-lg border border-border bg-bg-elevated p-3 transition-colors hover:border-border-subtle hover:bg-bg-subtle dark:border-border-dark dark:bg-bg-elevated-dark dark:hover:border-border-subtle-dark dark:hover:bg-bg-subtle-dark"
            >
              <span class="mb-1 flex items-center gap-1 text-[10px] font-medium text-text-muted dark:text-text-muted-dark">
                <svg class="h-2.5 w-2.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
                </svg>
                前のエピソード
              </span>
              <span class="text-xs font-medium text-text group-hover:text-accent dark:text-text-dark dark:group-hover:text-accent line-clamp-2">
                {prevEpisode.title}
              </span>
            </a>
          ) : (
            <div></div>
          )}
          {nextEpisode && (
            <a
              href={`/episodes/${nextEpisode.id}`}
              class="group flex flex-col items-end rounded-lg border border-border bg-bg-elevated p-3 text-right transition-colors hover:border-border-subtle hover:bg-bg-subtle dark:border-border-dark dark:bg-bg-elevated-dark dark:hover:border-border-subtle-dark dark:hover:bg-bg-subtle-dark"
            >
              <span class="mb-1 flex items-center gap-1 text-[10px] font-medium text-text-muted dark:text-text-muted-dark">
                次のエピソード
                <svg class="h-2.5 w-2.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                </svg>
              </span>
              <span class="text-xs font-medium text-text group-hover:text-accent dark:text-text-dark dark:group-hover:text-accent line-clamp-2">
                {nextEpisode.title}
              </span>
            </a>
          )}
        </div>
      </nav>
    )}

    <!-- 文字起こしテキスト（検索用、非表示） -->
    {transcriptText && (
      <div class="sr-only" data-pagefind-index-attrs="data-transcript" data-transcript={transcriptText}>
        {transcriptText}
      </div>
    )}
  </article>
</Layout>
