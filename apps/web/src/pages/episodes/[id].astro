---
import Layout from "../../layouts/Layout.astro";
import { getPublishedEpisodes, getEpisode, formatDuration, formatDate, formatFileSize, processDescription, getPodcastIndex, getTranscriptText } from "../../lib/api";
import type { Episode } from "../../lib/types";

// 前後エピソードのナビゲーション用
interface EpisodeNav {
  id: string;
  title: string;
}

// SSGモード用: ビルド時にパスを生成
export async function getStaticPaths() {
  const [episodes, index] = await Promise.all([
    getPublishedEpisodes(),
    getPodcastIndex(),
  ]);
  const websiteUrl = index.podcast.websiteUrl;
  const podcastArtworkUrl = index.podcast.artworkUrl;
  const spotifyUrl = index.podcast.spotifyUrl || null;

  return Promise.all(
    episodes.map(async (episode, idx) => {
      const transcriptText = episode.transcriptUrl
        ? await getTranscriptText(episode.transcriptUrl)
        : "";
      // エピソードは新しい順なので: index小=新しい, index大=古い
      // 前のエピソード = より古い（index + 1）
      // 次のエピソード = より新しい（index - 1）
      const prevEpisode = idx < episodes.length - 1
        ? { id: episodes[idx + 1].id, title: episodes[idx + 1].title }
        : null;
      const nextEpisode = idx > 0
        ? { id: episodes[idx - 1].id, title: episodes[idx - 1].title }
        : null;
      return {
        params: { id: episode.id },
        props: { episode, websiteUrl, transcriptText, podcastArtworkUrl, prevEpisode, nextEpisode, spotifyUrl },
      };
    })
  );
}

// SSRモード（開発時）はpropsが空なので、paramsから取得
const { id } = Astro.params;
let episode: Episode;
let websiteUrl: string;
let transcriptText: string;
let podcastArtworkUrl: string;
let prevEpisode: EpisodeNav | null = null;
let nextEpisode: EpisodeNav | null = null;
let spotifyUrl: string | null = null;

if (Astro.props.episode) {
  // SSGモード: getStaticPathsからpropsが渡される
  episode = Astro.props.episode;
  websiteUrl = Astro.props.websiteUrl;
  transcriptText = Astro.props.transcriptText || "";
  podcastArtworkUrl = Astro.props.podcastArtworkUrl || "";
  prevEpisode = Astro.props.prevEpisode || null;
  nextEpisode = Astro.props.nextEpisode || null;
  spotifyUrl = Astro.props.spotifyUrl || null;
} else {
  // SSRモード: paramsから取得してfetch
  const [fetchedEpisode, allEpisodes, index] = await Promise.all([
    getEpisode(id!),
    getPublishedEpisodes(),
    getPodcastIndex(),
  ]);
  episode = fetchedEpisode;
  websiteUrl = index.podcast.websiteUrl;
  podcastArtworkUrl = index.podcast.artworkUrl;
  spotifyUrl = index.podcast.spotifyUrl || null;
  transcriptText = episode.transcriptUrl
    ? await getTranscriptText(episode.transcriptUrl)
    : "";
  // 前後のエピソードを探す
  const currentIdx = allEpisodes.findIndex(e => e.id === id);
  if (currentIdx !== -1) {
    if (currentIdx < allEpisodes.length - 1) {
      prevEpisode = { id: allEpisodes[currentIdx + 1].id, title: allEpisodes[currentIdx + 1].title };
    }
    if (currentIdx > 0) {
      nextEpisode = { id: allEpisodes[currentIdx - 1].id, title: allEpisodes[currentIdx - 1].title };
    }
  }
}

const description = processDescription(episode.description, episode, websiteUrl);
---

<Layout title={episode.title} description={description} ogImage={episode.ogImageUrl || podcastArtworkUrl} ogType="article">
  <article class="mx-auto max-w-4xl px-4 py-12" data-pagefind-body>
    <!-- ヘッダー -->
    <header class="mb-8">
      <div class="mb-4 flex items-center gap-3">
        <a
          href="/"
          class="inline-flex items-center gap-1 text-sm text-zinc-500 hover:text-zinc-700 dark:text-zinc-400 dark:hover:text-zinc-200"
        >
          <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
          </svg>
          エピソード一覧
        </a>
      </div>

      <div class="mb-6 flex flex-col gap-6 items-center sm:flex-row sm:items-start">
        {(episode.ogImageUrl || podcastArtworkUrl) && (
          <a class="shrink-0" href="/">
            <img
              src={episode.ogImageUrl || podcastArtworkUrl}
              alt={episode.title}
              class="h-32 w-32 shrink-0 rounded-xl shadow-lg sm:h-40 sm:w-40"
            />
          </a>
        )}
        <div class="text-center sm:text-left">
          <time class="text-sm text-zinc-500 dark:text-zinc-400" datetime={episode.publishedAt || episode.publishAt}>
            {formatDate(episode.publishedAt || episode.publishAt)}
          </time>
          <h1 class="mt-2 text-lg font-bold leading-tight text-zinc-900 dark:text-zinc-100 sm:text-3xl md:text-4xl">
            {episode.title}
          </h1>
        </div>
      </div>
    </header>

    <!-- オーディオプレイヤー -->
    {/* audioUrlがあればそれを使い、なければsourceAudioUrl（RSSインポート時の外部URL）を使用 */}
    <div class="mb-8 rounded-xl border border-zinc-200 bg-white p-6 dark:border-zinc-800 dark:bg-zinc-800">
      <audio controls class="mb-4 w-full" preload="metadata">
        <source src={episode.audioUrl || episode.sourceAudioUrl || ""} type="audio/mpeg" />
        お使いのブラウザはオーディオ再生に対応していません。
      </audio>

      <div class="flex flex-wrap items-center gap-x-6 gap-y-2 text-sm text-zinc-500 dark:text-zinc-400">
        <span class="flex items-center gap-1.5">
          <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
          {formatDuration(episode.duration)}
        </span>
        <span class="flex items-center gap-1.5">
          <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 21h10a2 2 0 002-2V9.414a1 1 0 00-.293-.707l-5.414-5.414A1 1 0 0012.586 3H7a2 2 0 00-2 2v14a2 2 0 002 2z" />
          </svg>
          {formatFileSize(episode.fileSize)}
        </span>
        <a
          href={episode.audioUrl || episode.sourceAudioUrl || ""}
          download
          class="flex items-center gap-1.5 text-blue-600 hover:text-blue-700 dark:text-blue-400 dark:hover:text-blue-300"
        >
          <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4" />
          </svg>
          ダウンロード
        </a>
        {episode.applePodcastsUrl && (
          <a
            href={episode.applePodcastsUrl}
            target="_blank"
            rel="noopener noreferrer"
            class="flex items-center gap-1.5 rounded-full bg-gradient-to-r from-purple-500 to-pink-500 px-3 py-1 text-white transition-opacity hover:opacity-90"
          >
            <svg class="h-4 w-4" viewBox="0 0 24 24" fill="currentColor">
              <path d="M12 0C5.373 0 0 5.373 0 12s5.373 12 12 12 12-5.373 12-12S18.627 0 12 0zm0 3.6c4.636 0 8.4 3.764 8.4 8.4 0 2.812-1.38 5.298-3.502 6.822-.164-.58-.41-1.35-.706-2.175.805-.858 1.308-2.143 1.308-3.447 0-3.037-2.463-5.5-5.5-5.5S6.5 10.163 6.5 13.2c0 1.304.503 2.589 1.308 3.447-.296.825-.542 1.595-.706 2.175C4.98 17.298 3.6 14.812 3.6 12c0-4.636 3.764-8.4 8.4-8.4zm0 4.8c1.988 0 3.6 1.612 3.6 3.6 0 .752-.28 1.433-.7 1.988-.178-.495-.377-.997-.583-1.478a1.8 1.8 0 10-2.634 0c-.206.481-.405.983-.583 1.478-.42-.555-.7-1.236-.7-1.988 0-1.988 1.612-3.6 3.6-3.6zm0 6c.259 0 .458.147.573.382.567 1.153 1.227 2.897 1.227 3.618 0 .994-.806 1.8-1.8 1.8s-1.8-.806-1.8-1.8c0-.721.66-2.465 1.227-3.618.115-.235.314-.382.573-.382z"/>
            </svg>
            Apple Podcasts
          </a>
        )}
        {spotifyUrl && (
          <a
            href={spotifyUrl}
            target="_blank"
            rel="noopener noreferrer"
            class="flex items-center gap-1.5 rounded-full bg-[#1DB954] px-3 py-1 text-white transition-opacity hover:opacity-90"
          >
            <svg class="h-4 w-4" viewBox="0 0 24 24" fill="currentColor">
              <path d="M12 0C5.4 0 0 5.4 0 12s5.4 12 12 12 12-5.4 12-12S18.66 0 12 0zm5.521 17.34c-.24.359-.66.48-1.021.24-2.82-1.74-6.36-2.101-10.561-1.141-.418.122-.779-.179-.899-.539-.12-.421.18-.78.54-.9 4.56-1.021 8.52-.6 11.64 1.32.42.18.479.659.301 1.02zm1.44-3.3c-.301.42-.841.6-1.262.3-3.239-1.98-8.159-2.58-11.939-1.38-.479.12-1.02-.12-1.14-.6-.12-.48.12-1.021.6-1.141C9.6 9.9 15 10.561 18.72 12.84c.361.181.54.78.241 1.2zm.12-3.36C15.24 8.4 8.82 8.16 5.16 9.301c-.6.179-1.2-.181-1.38-.721-.18-.601.18-1.2.72-1.381 4.26-1.26 11.28-1.02 15.721 1.621.539.3.719 1.02.419 1.56-.299.421-1.02.599-1.559.3z"/>
            </svg>
            Spotify
          </a>
        )}
      </div>
    </div>

    <!-- 説明 -->
    <div class="rounded-xl border border-zinc-200 bg-white p-6 dark:border-zinc-800 dark:bg-zinc-800">
      <h2 class="mb-4 text-lg font-bold text-zinc-900 dark:text-zinc-100">
        エピソード概要
      </h2>
      <div class="prose prose-zinc dark:prose-invert max-w-none" set:html={description} />

      {episode.transcriptUrl && (
        <div class="mt-6 border-t border-zinc-100 pt-6 dark:border-zinc-700">
          <a
            href={episode.transcriptUrl}
            target="_blank"
            rel="noopener noreferrer"
            class="inline-flex items-center gap-2 text-sm font-medium text-blue-600 hover:text-blue-700 dark:text-blue-400 dark:hover:text-blue-300"
          >
            <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
            </svg>
            文字起こしを見る
          </a>
        </div>
      )}
    </div>

    <!-- シェア・外部リンク -->
    <div class="mt-8 flex flex-wrap items-center gap-4">
      <span class="text-sm font-medium text-zinc-500 dark:text-zinc-400">シェア:</span>
      <a
        href={`https://twitter.com/intent/tweet?url=${encodeURIComponent(Astro.url.href)}&text=${encodeURIComponent(episode.title)}`}
        target="_blank"
        rel="noopener noreferrer"
        class="rounded-lg bg-zinc-100 p-2 text-zinc-600 transition-colors hover:bg-zinc-200 dark:bg-zinc-800 dark:text-zinc-400 dark:hover:bg-zinc-700"
        aria-label="X (Twitter) でシェア"
      >
        <svg class="h-5 w-5" fill="currentColor" viewBox="0 0 24 24">
          <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>
        </svg>
      </a>
      <button
        type="button"
        onclick={`navigator.clipboard.writeText('${Astro.url.href}'); alert('URLをコピーしました')`}
        class="rounded-lg bg-zinc-100 p-2 text-zinc-600 transition-colors hover:bg-zinc-200 dark:bg-zinc-800 dark:text-zinc-400 dark:hover:bg-zinc-700"
        aria-label="URLをコピー"
      >
        <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 5H6a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2v-1M8 5a2 2 0 002 2h2a2 2 0 002-2M8 5a2 2 0 012-2h2a2 2 0 012 2m0 0h2a2 2 0 012 2v3m2 4H10m0 0l3-3m-3 3l3 3" />
        </svg>
      </button>
    </div>

    <!-- 前後のエピソードナビゲーション -->
    {(prevEpisode || nextEpisode) && (
      <nav class="mt-12 border-t border-zinc-200 pt-8 dark:border-zinc-700">
        <div class="grid gap-4 sm:grid-cols-2">
          {prevEpisode ? (
            <a
              href={`/episodes/${prevEpisode.id}`}
              class="group flex flex-col rounded-xl border border-zinc-200 bg-white p-4 transition-colors hover:border-zinc-300 hover:bg-zinc-50 dark:border-zinc-700 dark:bg-zinc-800 dark:hover:border-zinc-600 dark:hover:bg-zinc-700"
            >
              <span class="mb-1 flex items-center gap-1 text-xs font-medium text-zinc-500 dark:text-zinc-400">
                <svg class="h-3 w-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
                </svg>
                前のエピソード
              </span>
              <span class="text-sm font-medium text-zinc-900 group-hover:text-blue-600 dark:text-zinc-100 dark:group-hover:text-blue-400 line-clamp-2">
                {prevEpisode.title}
              </span>
            </a>
          ) : (
            <div></div>
          )}
          {nextEpisode && (
            <a
              href={`/episodes/${nextEpisode.id}`}
              class="group flex flex-col items-end rounded-xl border border-zinc-200 bg-white p-4 text-right transition-colors hover:border-zinc-300 hover:bg-zinc-50 dark:border-zinc-700 dark:bg-zinc-800 dark:hover:border-zinc-600 dark:hover:bg-zinc-700"
            >
              <span class="mb-1 flex items-center gap-1 text-xs font-medium text-zinc-500 dark:text-zinc-400">
                次のエピソード
                <svg class="h-3 w-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                </svg>
              </span>
              <span class="text-sm font-medium text-zinc-900 group-hover:text-blue-600 dark:text-zinc-100 dark:group-hover:text-blue-400 line-clamp-2">
                {nextEpisode.title}
              </span>
            </a>
          )}
        </div>
      </nav>
    )}

    <!-- 文字起こしテキスト（検索用、非表示） -->
    {transcriptText && (
      <div class="sr-only" data-pagefind-index-attrs="data-transcript" data-transcript={transcriptText}>
        {transcriptText}
      </div>
    )}
  </article>
</Layout>
