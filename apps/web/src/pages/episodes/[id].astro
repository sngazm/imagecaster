---
import Layout from "../../layouts/Layout.astro";
import { getPublishedEpisodes, getEpisode, formatDuration, formatDate, formatFileSize } from "../../lib/api";
import type { Episode } from "../../lib/types";

export async function getStaticPaths() {
  const episodes = await getPublishedEpisodes();

  return episodes.map((episode) => ({
    params: { id: episode.id },
    props: { episode },
  }));
}

interface Props {
  episode: Episode;
}

const { episode } = Astro.props;
---

<Layout title={episode.title} description={episode.description}>
  <article class="mx-auto max-w-4xl px-4 py-12">
    <!-- ヘッダー -->
    <header class="mb-8">
      <div class="mb-4 flex items-center gap-3">
        <a
          href="/"
          class="inline-flex items-center gap-1 text-sm text-zinc-500 hover:text-zinc-700 dark:text-zinc-400 dark:hover:text-zinc-200"
        >
          <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
          </svg>
          エピソード一覧
        </a>
      </div>

      <div>
        <time class="text-sm text-zinc-500 dark:text-zinc-400" datetime={episode.publishedAt || episode.publishAt}>
          {formatDate(episode.publishedAt || episode.publishAt)}
        </time>
      </div>

      <h1 class="mt-4 text-3xl font-bold leading-tight text-zinc-900 dark:text-zinc-100 md:text-4xl">
        {episode.title}
      </h1>
    </header>

    <!-- オーディオプレイヤー -->
    <div class="mb-8 rounded-xl border border-zinc-200 bg-white p-6 dark:border-zinc-800 dark:bg-zinc-800">
      <audio controls class="mb-4 w-full" preload="metadata">
        <source src={episode.audioUrl} type="audio/mpeg" />
        お使いのブラウザはオーディオ再生に対応していません。
      </audio>

      <div class="flex flex-wrap items-center gap-x-6 gap-y-2 text-sm text-zinc-500 dark:text-zinc-400">
        <span class="flex items-center gap-1.5">
          <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
          {formatDuration(episode.duration)}
        </span>
        <span class="flex items-center gap-1.5">
          <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 21h10a2 2 0 002-2V9.414a1 1 0 00-.293-.707l-5.414-5.414A1 1 0 0012.586 3H7a2 2 0 00-2 2v14a2 2 0 002 2z" />
          </svg>
          {formatFileSize(episode.fileSize)}
        </span>
        <a
          href={episode.audioUrl}
          download
          class="flex items-center gap-1.5 text-blue-600 hover:text-blue-700 dark:text-blue-400 dark:hover:text-blue-300"
        >
          <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4" />
          </svg>
          ダウンロード
        </a>
      </div>
    </div>

    <!-- 説明 -->
    <div class="rounded-xl border border-zinc-200 bg-white p-6 dark:border-zinc-800 dark:bg-zinc-800">
      <h2 class="mb-4 text-lg font-bold text-zinc-900 dark:text-zinc-100">
        エピソード概要
      </h2>
      <div class="prose prose-zinc dark:prose-invert max-w-none" set:html={episode.description} />

      {episode.transcriptUrl && (
        <div class="mt-6 border-t border-zinc-100 pt-6 dark:border-zinc-700">
          <a
            href={episode.transcriptUrl}
            target="_blank"
            rel="noopener noreferrer"
            class="inline-flex items-center gap-2 text-sm font-medium text-blue-600 hover:text-blue-700 dark:text-blue-400 dark:hover:text-blue-300"
          >
            <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
            </svg>
            文字起こしを見る
          </a>
        </div>
      )}
    </div>

    <!-- シェアボタン -->
    <div class="mt-8 flex items-center gap-4">
      <span class="text-sm font-medium text-zinc-500 dark:text-zinc-400">シェア:</span>
      <a
        href={`https://twitter.com/intent/tweet?url=${encodeURIComponent(Astro.url.href)}&text=${encodeURIComponent(episode.title)}`}
        target="_blank"
        rel="noopener noreferrer"
        class="rounded-lg bg-zinc-100 p-2 text-zinc-600 transition-colors hover:bg-zinc-200 dark:bg-zinc-800 dark:text-zinc-400 dark:hover:bg-zinc-700"
        aria-label="X (Twitter) でシェア"
      >
        <svg class="h-5 w-5" fill="currentColor" viewBox="0 0 24 24">
          <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>
        </svg>
      </a>
      <button
        type="button"
        onclick={`navigator.clipboard.writeText('${Astro.url.href}'); alert('URLをコピーしました')`}
        class="rounded-lg bg-zinc-100 p-2 text-zinc-600 transition-colors hover:bg-zinc-200 dark:bg-zinc-800 dark:text-zinc-400 dark:hover:bg-zinc-700"
        aria-label="URLをコピー"
      >
        <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 5H6a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2v-1M8 5a2 2 0 002 2h2a2 2 0 002-2M8 5a2 2 0 012-2h2a2 2 0 012 2m0 0h2a2 2 0 012 2v3m2 4H10m0 0l3-3m-3 3l3 3" />
        </svg>
      </button>
    </div>
  </article>
</Layout>
