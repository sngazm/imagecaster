---
import Layout from "../layouts/Layout.astro";
import SubscribeSection from "../components/SubscribeSection.astro";
import { getPodcastIndex } from "../lib/api";

const index = await getPodcastIndex();
const podcast = index.podcast;
---

<Layout title="番組について" description={podcast.description}>
  <div class="mx-auto max-w-4xl px-4 py-12">
    <div class="grid gap-8 lg:grid-cols-3">
      <div class="lg:col-span-2">
        <article class="gaming-card rounded-xl border border-zinc-200 bg-white p-8 dark:border-zinc-800 dark:bg-zinc-900">
          <div class="mb-8 flex items-start gap-6">
            {podcast.artworkUrl && (
              <img
                src={podcast.artworkUrl}
                alt={podcast.title}
                class="neon-box h-32 w-32 shrink-0 rounded-xl shadow-lg transition-all duration-300 dark:animate-pulse-glow"
              />
            )}
            <div>
              <h1 class="mb-2 text-3xl font-bold text-zinc-900 dark:neon-text dark:text-zinc-100">
                {podcast.title}
              </h1>
              {podcast.author && (
                <p class="text-lg text-zinc-600 dark:text-zinc-400">
                  by <span class="dark:neon-text-pink">{podcast.author}</span>
                </p>
              )}
            </div>
          </div>

          <div class="prose prose-zinc dark:prose-invert max-w-none">
            <h2>番組について</h2>
            <p>{podcast.description}</p>

            <h2>番組情報</h2>
            <dl class="grid grid-cols-2 gap-4 not-prose">
              {podcast.category && (
                <>
                  <dt class="text-sm font-medium text-zinc-500 dark:text-zinc-400">カテゴリ</dt>
                  <dd class="text-sm text-zinc-900 dark:text-zinc-100">{podcast.category}</dd>
                </>
              )}
              {podcast.language && (
                <>
                  <dt class="text-sm font-medium text-zinc-500 dark:text-zinc-400">言語</dt>
                  <dd class="text-sm text-zinc-900 dark:text-zinc-100">{podcast.language}</dd>
                </>
              )}
              {podcast.email && (
                <>
                  <dt class="text-sm font-medium text-zinc-500 dark:text-zinc-400">お問い合わせ</dt>
                  <dd class="text-sm">
                    <a href={`mailto:${podcast.email}`} class="text-blue-600 hover:underline dark:text-blue-400">
                      {podcast.email}
                    </a>
                  </dd>
                </>
              )}
              {podcast.websiteUrl && (
                <>
                  <dt class="text-sm font-medium text-zinc-500 dark:text-zinc-400">ウェブサイト</dt>
                  <dd class="text-sm">
                    <a href={podcast.websiteUrl} target="_blank" rel="noopener noreferrer" class="text-blue-600 hover:underline dark:text-blue-400">
                      {podcast.websiteUrl}
                    </a>
                  </dd>
                </>
              )}
            </dl>
          </div>
        </article>
      </div>

      <aside>
        <SubscribeSection />
      </aside>
    </div>
  </div>
</Layout>
