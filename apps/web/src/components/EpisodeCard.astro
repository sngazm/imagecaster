---
import type { Episode } from "../lib/types";
import { formatDuration, formatDate, stripHtml, processDescription } from "../lib/api";

interface Props {
  episode: Episode;
  websiteUrl: string;
}

const { episode, websiteUrl } = Astro.props;
const processedDescription = processDescription(episode.description, episode, websiteUrl);
const plainDescription = stripHtml(processedDescription);
---

<article class="group rounded-xl border border-zinc-200 bg-white p-5 transition-shadow hover:shadow-lg dark:border-zinc-800 dark:bg-zinc-800">
  <a href={`/episodes/${episode.id}`} class="block">
    <div class="mb-3">
      <time class="text-sm text-zinc-500 dark:text-zinc-400" datetime={episode.publishedAt || episode.publishAt}>
        {formatDate(episode.publishedAt || episode.publishAt)}
      </time>
    </div>

    <h2 class="mb-2 text-lg font-bold leading-tight text-zinc-900 transition-colors group-hover:text-blue-600 dark:text-zinc-100 dark:group-hover:text-blue-400">
      {episode.title}
    </h2>

    <p class="mb-4 line-clamp-2 text-sm text-zinc-600 dark:text-zinc-400">
      {plainDescription}
    </p>

    <div class="flex items-center gap-4 text-sm text-zinc-500 dark:text-zinc-400">
      <span class="flex items-center gap-1">
        <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
        </svg>
        {formatDuration(episode.duration)}
      </span>
    </div>
  </a>
</article>
