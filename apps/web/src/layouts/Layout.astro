---
interface Props {
  title: string;
  description?: string;
  ogImage?: string;
}

const { title, description = "ポッドキャスト配信サイト", ogImage } = Astro.props;
const siteTitle = import.meta.env.SITE_TITLE || "Podcast";
const fullTitle = title === siteTitle ? title : `${title} | ${siteTitle}`;
---

<!doctype html>
<html lang="ja">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <meta property="og:title" content={fullTitle} />
    <meta property="og:description" content={description} />
    {ogImage && <meta property="og:image" content={ogImage} />}
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="alternate" type="application/rss+xml" title={siteTitle} href="/feed.xml" />
    <title>{fullTitle}</title>
    <!-- テーマ初期化（FOUC防止） -->
    <script is:inline>
      const theme = localStorage.getItem('theme') || 'light';
      if (theme === 'dark') {
        document.documentElement.classList.add('dark');
      }
    </script>
  </head>
  <body class="min-h-screen bg-zinc-50 text-zinc-900 transition-colors duration-300 dark:bg-zinc-950 dark:text-zinc-100">
    <!-- ダークモード用パーティクル背景 -->
    <div class="particle-bg fixed inset-0 -z-10"></div>
    <div class="animate-gradient fixed inset-0 -z-20"></div>

    <div class="relative flex min-h-screen flex-col">
      <header class="gaming-header sticky top-0 z-50 border-b border-zinc-200 bg-white/90 backdrop-blur-lg transition-all duration-300 dark:border-transparent">
        <div class="mx-auto flex h-16 max-w-4xl items-center justify-between px-4">
          <a href="/" class="group text-xl font-bold tracking-tight">
            <span class="transition-all duration-300 group-hover:opacity-80 dark:neon-text dark:animate-pulse-glow">
              {siteTitle}
            </span>
          </a>
          <nav class="flex items-center gap-4 md:gap-6">
            <a href="/" class="gaming-link text-sm font-medium text-zinc-600 transition-all hover:text-zinc-900 dark:text-zinc-400">
              エピソード
            </a>
            <a href="/about" class="gaming-link text-sm font-medium text-zinc-600 transition-all hover:text-zinc-900 dark:text-zinc-400">
              番組について
            </a>
            <a
              href="/feed.xml"
              target="_blank"
              rel="noopener noreferrer"
              class="gaming-rss flex items-center gap-1.5 rounded-full bg-orange-500 px-3 py-1.5 text-sm font-medium text-white transition-all hover:bg-orange-600"
            >
              <svg class="h-4 w-4" fill="currentColor" viewBox="0 0 24 24">
                <path d="M6.18 15.64a2.18 2.18 0 1 1 0 4.36 2.18 2.18 0 0 1 0-4.36m0-12a14.18 14.18 0 0 1 14.18 14.18h-3.27A10.91 10.91 0 0 0 6.18 6.91V3.64m0 6.55a7.64 7.64 0 0 1 7.64 7.63H10.5a4.36 4.36 0 0 0-4.32-4.36v-3.27Z"/>
              </svg>
              <span class="hidden sm:inline">RSS</span>
            </a>

            <!-- テーマ切り替えボタン -->
            <button
              id="theme-toggle"
              type="button"
              class="theme-toggle flex h-9 w-9 items-center justify-center rounded-full bg-zinc-100 text-zinc-600 hover:bg-zinc-200 dark:text-white"
              aria-label="テーマ切り替え"
            >
              <!-- ライトモード: 月アイコン -->
              <svg class="h-5 w-5 dark:hidden" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20.354 15.354A9 9 0 018.646 3.646 9.003 9.003 0 0012 21a9.003 9.003 0 008.354-5.646z" />
              </svg>
              <!-- ダークモード: 太陽アイコン（ネオン） -->
              <svg class="hidden h-5 w-5 dark:block" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 3v1m0 16v1m9-9h-1M4 12H3m15.364 6.364l-.707-.707M6.343 6.343l-.707-.707m12.728 0l-.707.707M6.343 17.657l-.707.707M16 12a4 4 0 11-8 0 4 4 0 018 0z" />
              </svg>
            </button>
          </nav>
        </div>
      </header>

      <main class="flex-1">
        <slot />
      </main>

      <footer class="border-t border-zinc-200 py-8 transition-colors dark:border-zinc-800/50 dark:bg-black/30">
        <div class="mx-auto max-w-4xl px-4 text-center text-sm text-zinc-500 dark:text-zinc-400">
          <p class="dark:animate-flicker">© {new Date().getFullYear()} <span class="dark:neon-text-pink">{siteTitle}</span>. All rights reserved.</p>
        </div>
      </footer>
    </div>

    <script>
      const toggle = document.getElementById('theme-toggle');

      toggle?.addEventListener('click', () => {
        const isDark = document.documentElement.classList.toggle('dark');
        localStorage.setItem('theme', isDark ? 'dark' : 'light');
      });
    </script>
  </body>
</html>

<style is:global>
  @import "../styles/global.css";
</style>
